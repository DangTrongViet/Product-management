mixin product-item(item)
    .col-4.mn-3
        .product-item 
            .inner-image 
                img(src=item.thumbnail 
                alt=item.title style="width:200px")
                if(item.featured=="1")
                    .inner-featured Nổi bật
            .inner-content 
                h3.inner-title 
                    a(href=`/products/detail/${item.slug}`)   #{item.title}  
            .inner-price-new.new-price #{item.priceNew}$
                if item.priceNew !=item.price
                    .inner-price-old.old-price(style="text-decoration: line-through;") #{item.price}$
                else
                    .inner-price-old #{item.price}$

                .inner-discount.discount -#{item.discountPercentage}% 