include ../mixins/sub-menu.pug

header.header 
    .container
        .row-align-items-center
            .col-3 
                .inner-logo
                    a(href="/")
                        img(src="/uploads/th12_ODYP.jpg", alt="Logo", width="200px",height="auto")
            
            .col-5 
                form(
                    action="/search"
                    method="GET"
                )
                    div(class="form-group d-flex mb-8")
                        input(
                            type="text"
                            placeholder="Nhập từ khóa..."
                            class="form-control"
                            name="keyword"
                        )
                        button(
                            type="submit"
                            class="btn btn-primary"
                        ) Tìm 
            
            .col-9 
                .inner-menu 
                    ul 
                        li 
                            a(href="/") Trang chủ
                        li(class="sub-menu")
                            -const pathProduct="/products"
                            a(href=pathProduct) Sản phẩm
                                +sub-menu(layoutProductCategory,pathProduct)
                        li
                            a(href="/cart") Giỏ hàng (#{miniCart ? miniCart.totalQuantity : 0})

    link(rel="stylesheet", href="/css/style.css") 
    script(src="/js/script.js")