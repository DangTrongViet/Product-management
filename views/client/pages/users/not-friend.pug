extends ../../layouts/default
include ../../mixins/box-head.pug
block main 
    +alert-success(5000)
    .container.my-3 
        include ../../partials/list-btn-users.pug
        .row 
            .col-12 
                +box-head("Danh sách người dùng")

        .row(data-users-not-friend=user.id)
            each user in users    
                .col-6(user-id=user.id) 
                    div(class="box-user")
                        div(class="inner-avatar")
                            img(
                                src=(user.avatar ? user.avatar:"https://cactusthemes.com/blog/wp-content/uploads/2018/01/tt_avatar_small.jpg")
                                alt=user.fullName
                            )
                        div(class="inner-info")
                            div(class="inner-name") #{user.fullName}
                            div(class="inner-buttons")
                                button(
                                    class="bnt btn-sm btn-primary mr-1"
                                    btn-add-friend=user.id
                                ) Kết bạn
                                button(
                                    class="btn btn-sm btn-secondary mr-1"
                                    btn-cancel-friend=user.id
                                ) Hủy
block script 
    script(src="/js/users.js")