extends ../../layouts/default
include ../../mixins/box-head.pug
block main 
    +alert-success(5000)
    .container.my-3 
        include ../../partials/list-btn-users.pug
        .row 
            .col-12 
                +box-head("Chat")

        .row 
            .col
                .chat(my-id=user.id)
                    .inner-body 
                        each chat in chats 
                            div(class=(chat.user_id == user.id ? "inner-outgoing" : "inner-incoming") id=chat.user_id)
                                if(chat.user_id!=user.id)
                                    .inner-name #{chat.infoUser.fullName}
                                if(chat.content)
                                        .inner-content
                                            if(chat.user_id == user.id)
                                                button(class="delete-icon" type="button")
                                                    i.fa-solid.fa-trash
                                            | #{chat.content}
                                        
                                    
                                        
                                if(chat.images)
                                    .inner-images 
                                        each image in chat.images 
                                            img(src=image)
                                            
                        div(class="inner-list-typing")
                    .inner-preview-images 
                        div(
                            class="custom-file-container"
                            data-upload-id="upload-images"
                        )
                            
                    .inner-foot
                        form(
                            class="inner-form"
                            action=""
                        )
                            input(
                                type="text"
                                placeholder="Nhập nội dung..."
                                name="content"
                            )
                            label(class="btn btn-light mx-2 mb-0" 
                                for="file-upload-with-preview-upload-images"
                            )
                                i.fa-regular.fa-image
                            span(class="button-icon btn btn-light mx-2") 
                                i.fa-regular.fa-face-smile
                            button
                                i.fa-sharp.fa-solid.fa-paper-plane
        div(class="tooltip" role="tooltip")
            emoji-picker(class="light") 
block script 
    script(type="module" src="/js/chat.js")