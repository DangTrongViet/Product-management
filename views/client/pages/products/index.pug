
//- kế thừa
extends ../../layouts/default

//- nhúng
include ../../mixins/box-head.pug
//- Không ghi gì mặc định là thẻ div VD: .row, .product-image
block main 

    .container.my-3 
        .row 
            .col-12 
                +box-head("Danh sách sản phẩm")

        .row 
            each item in products
                .col-4.mn-3
                    .product-item 
                        .inner-image 
                            img(src=item.thumbnail 
                            alt=item.title style="width:200px")
                        .inner-content 
                            h3.inner-title 
                                a(href=`/products/${item.slug}`)   #{item.title}  
                            .inner-price-new #{item.priceNew}
                            .inner-price-old #{item.price}
                            .inner-discount -#{item.discountPercentage}% 